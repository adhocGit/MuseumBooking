<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:padding">@dimen/padding_m</item>
        <item name="android:textSize">@dimen/font_m</item>

    </style>

    <style name="Button.White">
        <item name="android:textColor">@drawable/color_lime</item>
        <item name="android:background">@drawable/button_white</item>
    </style>

